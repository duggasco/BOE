# BOE Backend Environment Variables
# Copy this file to .env and update with your actual values

# Security - CRITICAL: Change these in production!
SECRET_KEY=generate-a-strong-random-key-here-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=boe_user
POSTGRES_PASSWORD=boe_password
POSTGRES_DB=boe_db
# Or use direct URL
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@boe-system.local

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_OAUTH=false
ENABLE_WEBSOCKETS=true

# Development
DEBUG=false
AUTO_CREATE_TABLES=false
SEED_DATABASE=false

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO