# BOE Backend Environment Variables
# Copy this file to .env and update with your values

# Project
PROJECT_NAME="BOE Replacement System"
VERSION="0.29.0"
DEBUG=true

# API
API_PREFIX="/api/v1"
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=boe_user
POSTGRES_PASSWORD=boe_password
POSTGRES_DB=boe_db
# Or use full connection string:
# DATABASE_URL=postgresql+asyncpg://boe_user:boe_password@localhost:5432/boe_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB
EXPORT_TEMP_DIR=./temp/exports
EXPORT_RETENTION_HOURS=24

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Features
ENABLE_REGISTRATION=true
ENABLE_OAUTH=false
ENABLE_WEBSOCKETS=true
AUTO_CREATE_TABLES=false
SEED_DATABASE=false

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@boe-system.local

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics
LOG_LEVEL=INFO
LOG_FORMAT=json